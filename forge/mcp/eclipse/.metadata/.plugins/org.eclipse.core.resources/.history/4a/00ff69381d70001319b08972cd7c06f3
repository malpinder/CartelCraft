package net.cartelcraft;

import java.util.Arrays;

import net.cartelcraft.items.CartelItem;
import net.cartelcraft.items.ItemPseudoephedrine;
import cpw.mods.fml.common.Mod;
import cpw.mods.fml.common.Mod.EventHandler;
import cpw.mods.fml.common.ModMetadata;
import cpw.mods.fml.common.event.FMLInitializationEvent;
import cpw.mods.fml.common.event.FMLPreInitializationEvent;
import cpw.mods.fml.common.network.NetworkMod;

@Mod(modid = CartelCraft.modid, name = "Cartel Craft", version = "1.0")
@NetworkMod(clientSideRequired = true, serverSideRequired = false)

public class CartelCraft {
	public static final String modid = "CartelCraft";
	
	//Blocks
		
	//Items
		public static CartelItem itemPseudoephedrine;
      
	@EventHandler
    public void preInit(FMLPreInitializationEvent event) {
		getModInfo(event.getModMetadata());
    }
      
	//Everything being created in your mod goes in here
    @EventHandler
    public void load(FMLInitializationEvent event) {
    	//Blocks
	    	
    	//Item
	    	
    	
    	//GameRegistry - Game modifications(textures, adding items and blocks)
    	//LanguageRegistry - Text related modifications
    }
       
    public void getModInfo(ModMetadata meta) {
    	meta.authorList = Arrays.asList("Argixx", "BradyD", "Doug Is A Bitch");
    	meta.logoFile = "/assets/cartelcraft/logo.png";
    	meta.autogenerated = false;
    	meta.description = "Welcome to the magical world of CartelCraft™! In CartelCraft™ you will get to live in the exciting world of illicit drug production, distribution and consumption! Want to follow in the footsteps of Walter White and create an empire, or how about getting trashed out and killing bitches in the streets of Detroit? The punk ass bitch living next door to you is producing a product better than yours, time to build a glock and fuck a punk ass bitch up! CartelCraft™, coming to distributors near you!";
    }
}